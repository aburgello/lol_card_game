<% if @champions.present? %>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 mx-auto">
    <% @champions.each do |champion| %>
          <%= link_to champion_path(champion), class: "relative shadow-lg rounded-lg overflow-hidden group hover:scale-105 transition-all duration-300 ease-in-out" do %>

      <div class="relative shadow-lg rounded-lg overflow-hidden group hover:scale-105 transition-all duration-300 ease-in-out">
        <!-- Champion Image -->
        <img src="<%= champion.splash_art %>" alt="<%= champion.name %> Splash Art" class="w-full h-72 object-cover">

        <!-- Overlay Gradient -->
        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent"></div>

        <!-- Champion Info (Name and Title) -->
        <div class="absolute bottom-4 left-4 text-white p-2 rounded-md">
          <h2 class="text-2xl font-bold capitalize"><%= champion.name %></h2>
          <p class="text-lg"><%= champion.title %></p>
        </div>

        <!-- Link to Champion Show Page -->
        
      </div>    <% end %>

    <% end %>
  </div>
<% else %>
  <p class="text-center text-gray-500">No champions available.</p>
<% end %>
