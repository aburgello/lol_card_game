<!-- Champion Section -->
<div class="lg:max-w-full mx-auto mb-12 py-6 sm:px-6 rounded-lg lg:px-8 lg:py-8 bg-gray-900 text-white">
  <div class="grid grid-cols-1">

    <!-- Champion Splash Art and Lore -->
    <div class="flex flex-col items-center relative">
      <!-- Splash Art -->
      <div class="relative w-full">
        <%= image_tag @champion.splash_art, alt: "#{@champion.name} splash art", class: "w-full rounded-xl shadow-xl" %>

        <!-- Gradient Overlay -->
        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent rounded-lg"></div>

        <!-- Name and Title -->
        <div class="absolute bottom-4 left-4 text-white p-2 rounded-md">
          <h2 class="text-4xl font-bold capitalize"><%= @champion.name %>, <%= @champion.title %></h2>
        </div>

        <!-- Abilities Icons (Overlay on Splash Art) -->
        <div class="absolute bottom-4 right-4 flex space-x-4">
          <% @champion.abilities.each do |ability| %>
            <div class="relative group w-16 h-16 rounded-xl shadow-lg overflow-hidden cursor-pointer">
              <!-- Ability Icon Image -->
              <%= image_tag ability.image, alt: "#{ability.name} icon", class: "w-full h-full object-cover" %>

              <!-- Ability Name and Description on Hover -->
              <div class="absolute inset-0 bg-black bg-opacity-50 flex items-center justify-center opacity-0 group-hover:opacity-100 text-white text-center p-4 transition-opacity">
                <div>
                  <h4 class="text-xs font-semibold my-2"><%= ability.name %></h4>
                  <!-- You can add more description or effects here if necessary -->
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Lore -->
      <div class="mt-6 text-lg text-gray-300">
        <p><%= @champion.lore %></p>
      </div>
    </div>

    <!-- Champion Skins Section -->
    <div class="mt-12 ">
      <h3 class="text-3xl font-semibold mb-4 text-center">Skins</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-8">
        <% @champion.skins.drop(1).each do |skin| %> <!-- Exclude first skin -->
          <div class="relative group bg-gray-800 rounded-lg shadow-lg cursor-pointer hover:scale-105 transition-all duration-300 ease-in-out">
            <!-- Skin Loading Art -->
            <%= image_tag skin.loading_art, alt: "#{skin.name} loading art", 
                          class: "w-full h-full object-cover rounded-lg shadow-md", 
                          data: { skin_splash: skin.splash_art, skin_name: skin.name, skin_id: skin.id } %>

            <!-- Overlay with Gradient Effect -->
            <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent rounded-lg" style="pointer-events: none;"></div>

            <!-- Skin Name -->
            <h4 class="text-lg font-semibold mb-2 mt-2 absolute bottom-2 text-center text-white px-4 rounded-md" style="pointer-events: none;">
              <%= skin.name %>
            </h4>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Modal to Show Full Splash Art -->
  <div id="splash-art-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 flex">
    <div class="bg-gradient-to-b from-slate-950 to-gray-900 p-3 rounded-xl max-w-6xl w-full relative">
      <div class="flex justify-center">
        <img id="splash-art-image" src="" alt="Splash Art" class="max-w-full max-h-full object-contain rounded-xl shadow-md">
      </div>
    </div>
  </div>

  <script>
    // Get all images with the skin splash art and add event listener to show modal
    document.querySelectorAll('[data-skin-splash]').forEach(img => {
      img.addEventListener('click', function() {
        const splashArt = this.getAttribute('data-skin-splash');
        const modal = document.getElementById('splash-art-modal');
        const splashImage = document.getElementById('splash-art-image');
        
        // Set the splash art image source and show the modal
        splashImage.src = splashArt;
        modal.classList.remove('hidden');
      });
    });

    // Close the modal when clicking outside the modal content
    document.getElementById('splash-art-modal').addEventListener('click', function(e) {
      // Check if the click is outside the modal content area
      if (e.target === this) {
        this.classList.add('hidden');
      }
    });
  </script>
</div>
