<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Lol Card Game" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,100..700;1,100..700&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="bg-gradient-to-r from-[#0A0C14] to-[#0A1428]">
    
    <!-- Navbar -->
    <nav class="p-4 text-white border-b-2 border-slate-900">
      <div class="flex justify-between items-center container mx-auto px-2">
        <a href="/" class="text-[#C8AA6E] text-2xl font-bold">Runeterra Prime</a>

        <!-- Navbar Links (Hidden on mobile, shown on medium+ screens) -->
        <div class="hidden md:flex space-x-4">
          <a href="/champions" class="text-[#A09B8C] hover:text-[#C8AA6E] text-lg transition-all duration-200 ease-in-out">Champions</a>
          <a href="/regions" class="text-[#A09B8C] hover:text-[#C8AA6E] text-lg transition-all duration-200 ease-in-out">Regions</a>

          <% if user_signed_in? %>
            <div class="group relative inline-block z-20">
              <span class="text-[#A09B8C] hover:text-[#C8AA6E] text-lg cursor-pointer transition-all duration-200 ease-in-out">
                <%= current_user.username.capitalize %>
              </span>
              <div class="absolute -left-1/2 mt-4 w-28 bg-[#0A1428] text-[#A09B8C] shadow-lg rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-100 ease-in-out hover:opacity-100 hover:visible">
                <%= link_to "Edit Profile", edit_user_registration_path, class: "block hover:text-white text-center rounded-sm px-4 py-4 hover:bg-[#C8AA6E]" %>
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "block hover:text-white text-center rounded-sm px-4 py-4 hover:bg-[#C8AA6E]" %>
              </div>
            </div>
          <% else %>
            <a href="/users/sign_in" class="text-[#A09B8C] hover:text-[#C8AA6E] text-lg transition-all duration-200 ease-in-out">Login</a>
          <% end %>
        </div>

        <!-- Hamburger Menu (Visible only on mobile) -->
        <div class="md:hidden flex items-center">
          <button id="hamburger" class="text-[#C8AA6E] focus:outline-none">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-6 h-6">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </div>
    </nav>

    <!-- Mobile Menu (Initially hidden) -->
    <div id="mobile-menu" class="md:hidden hidden bg-[#0A1428] text-[#A09B8C] w-full">
      <div class="space-y-4 p-4">
        <a href="/champions" class="block text-lg hover:text-[#C8AA6E]">Champions</a>
        <a href="/regions" class="block text-lg hover:text-[#C8AA6E]">Regions</a>

        <% if user_signed_in? %>
          <div class="group relative inline-block z-20">
            <span class="text-[#A09B8C] hover:text-[#C8AA6E] text-lg cursor-pointer transition-all duration-200 ease-in-out">
              <%= current_user.username.capitalize %>
            </span>
            <div class="absolute -right-1/2 md:right-0 mt-4 w-28 bg-[#0A1428] text-[#A09B8C] shadow-lg rounded-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-100 ease-in-out hover:opacity-100 hover:visible">
              <%= link_to "Edit Profile", edit_user_registration_path, class: "block hover:text-white text-left md:text-right rounded-sm px-4 py-4 hover:bg-[#C8AA6E]" %>
              <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "block hover:text-white text-left md:text-right rounded-sm px-4 py-4 hover:bg-[#C8AA6E]" %>
            </div>
          </div>
        <% else %>
          <a href="/users/sign_in" class="block text-lg hover:text-[#C8AA6E]">Login</a>
        <% end %>
      </div>
    </div>

    <!-- JavaScript for mobile menu toggle -->
    <script>
      document.addEventListener("turbo:load", function () {
        const hamburger = document.getElementById("hamburger");
        const mobileMenu = document.getElementById("mobile-menu");

        if (hamburger && mobileMenu) {
          hamburger.addEventListener("click", function () {
            mobileMenu.classList.toggle("hidden");
          });
        }
      });
    </script>

    <main class="mx-auto justify-center">
      <%= yield %>
    </main>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

  </body>
</html>
