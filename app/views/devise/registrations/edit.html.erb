  <div class="w-full max-w-3xl bg-[#091428] shadow-lg rounded-xl p-8">
    <h2 class="text-3xl font-bold text-center text-[#C8AA6E] mb-6">Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-4">
        <%= f.label :email, class: "block text-[#F0E6D2] mb-2" %>
        <%= f.email_field :email, autofocus: true, class: "w-full px-4 py-2 bg-[#0A1428] text-white rounded-lg focus:outline-none" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-4 text-[#F0E6D2]">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.label :password, class: "block text-[#F0E6D2]" %> <i class="text-[#A09B8C]">(leave blank if you don't want to change it)</i><br />
        <%= f.password_field :password, class: "w-full px-4 py-2 bg-[#0A1428] text-white rounded-lg focus:outline-none" %>
        <% if @minimum_password_length %>
          <br />
          <em class="text-[#A09B8C]"><%= @minimum_password_length %> characters minimum</em>
        <% end %>
      </div>

      <div class="mb-4">
        <%= f.label :password_confirmation, class: "block text-[#F0E6D2] mb-4" %>
        <%= f.password_field :password_confirmation, class: "w-full px-4 bg-[#0A1428] text-white rounded-lg focus:outline-none" %>
      </div>

      <div class="mb-4">
        <%= f.label :current_password, class: "block text-[#F0E6D2]" %> <i class="text-[#A09B8C]">(we need your current password to confirm your changes)</i><br />
        <%= f.password_field :current_password, class: "w-full px-4 py-2 bg-[#0A1428] text-white rounded-lg focus:outline-none" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Update", class: "w-full py-2 bg-[#C89B3C] hover:bg-[#C8AA6E] text-white font-bold rounded-lg transition-all duration-300" %>
      </div>
    <% end %>

    <div class="mt-4 text-center text-[#A09B8C]">
      Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), class: "text-[#C8AA6E] hover:underline text-center mt-2", data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>
    </div>

    <%= link_to "Back", :back, class: "text-[#C8AA6E] hover:underline text-center block mt-2" %>
  </div>
