  <div class="w-full max-w-md bg-[#091428] shadow-lg rounded-xl p-8 mt-4">
    <h1 class="text-3xl font-bold text-center text-[#C8AA6E] mb-6">Sign In</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
      <%= f.label :email, class: "block text-[#F0E6D2] mb-2" %>
      <%= f.text_field :email, autofocus: true, class: "w-full px-4 py-2 bg-[#0A1428] text-white rounded-lg focus:outline-none" %>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-[#F0E6D2] mb-2" %>
        <%= f.password_field :password, class: "w-full px-4 py-2 bg-[#0A1428] text-white rounded-lg focus:outline-none" %>
      </div>
      <%= f.submit "Log in", class: "w-full py-2 bg-[#C89B3C] hover:bg-[#C8AA6E] text-white font-bold rounded-lg transition-all duration-300" %>
    <% end %>
    <p class="text-center text-[#A09B8C] mt-4">Don't have an account? <%= link_to "Sign Up", new_user_registration_path, class: "text-[#C8AA6E] hover:underline" %></p>
  </div>
